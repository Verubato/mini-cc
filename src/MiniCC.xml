<?xml version="1.0" encoding="UTF-8"?>
<Ui xmlns="http://www.blizzard.com/wow/ui/">
   <Button name="MiniCCAuraButtonTemplate" inherits="SecureActionButtonTemplate" virtual="true">
      <Size x="24" y="24" />
      <Layers>
         <Layer level="ARTWORK">
            <Texture name="$parentIcon" parentKey="Icon" setAllPoints="true" />
         </Layer>
         <Layer level="OVERLAY">
            <FontString name="$parentCount" parentKey="Count" inherits="NumberFontNormalSmall" justifyH="RIGHT" justifyV="BOTTOM">
               <Anchors>
                  <Anchor point="BOTTOMRIGHT" x="-1" y="1" />
               </Anchors>
            </FontString>
         </Layer>
      </Layers>
      <Frames>
         <Cooldown name="$parentCooldown" parentKey="Cooldown">
            <Anchors>
               <Anchor point="TOPLEFT" />
               <Anchor point="BOTTOMRIGHT" />
            </Anchors>
            <SwipeTexture>
               <Color r="0" g="0" b="0" a="0.8"/>
            </SwipeTexture>
            <EdgeTexture file="Interface\Cooldown\UI-HUD-ActionBar-SecondaryCooldown"/>
         </Cooldown>
      </Frames>
   </Button>
</Ui>
